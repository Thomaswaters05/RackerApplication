<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>AngularJS example</title>
    <script src="Scripts/angular.min.js" type="text/javascript"></script>
    <script src="Scripts/RecptController.js" type="text/javascript"></script>
</head>
<body data-ng-app="RackerApplication" data-ng-controller="RecptController">
    <h1>Receipt Information</h1>
    <form name="myForm">
        <table>
            <tr>
                <td>
                    ID
                </td>
                <td>
                    Name
                </td>
                <td>
                    Address
                </td>
                <td>
                    Phone
                </td>
                <td></td>
                <td></td>
            </tr>
            <tr data-ng-repeat="rec in Receipts">
                <td>
                    {{rec.ReceiptID}}
                </td>
                <td>
                    {{rec.FirstName}}
                </td>
                <td>
                    {{rec.ReceiptName}}
                </td>
                <td>
                    {{rec.ReceiptPrice}}
                </td>
                <td>
                    <input type="submit" id="Edit" value="Edit" data-ng-click="getSingleData(rec)" />
                </td>
                <td>
                    <input type="submit" id="Delete" value="Delete" data-ng-click="deletecustomer(rec)" />
                </td>
            </tr>
            <tr>
                <td>
                    Receipt ID
                </td>
                <td>
                    <input type="text" data-ng-model="Receipt.ReceiptID"/ disabled>
                </td>
            </tr>
            <tr>
                <td>
                    Name
                </td>
                <td>
                    <input type="text" data-ng-model="Receipt.ReceiptName" required />
                </td>
            </tr>
            <tr>
                <td>
                    Price
                </td>
                <td>
                    <input type="text" data-ng-model="Receipt.ReceiptPrice" />
                </td>
            </tr>
            <tr>
              
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Save" data-ng-click="add(Receipt)" data-ng-disabled="myForm.user.$dirty && myForm.user.$invalid ||
  myForm.Receipt.ReceiptName.$dirty && myForm.Receipt.Receipt.$invalid" />
                    <input type="submit" value="Update" data-ng-click="save(Receipt)" />
                    <input type="reset" value="Clear" />
                </td>
            </tr>
        </table>
    </form>
</body>
</html>